<script type="text/javascript">
    $(document).ready(function () {
        $(document).on("change", "#@Html.IdFor(m => m.ContratoRetificacaoItemId)", function () {
            recuperaContratoItem();
        });
    });

    function recuperaContratoItem() {
        var isRecuperou = false
        var codigoContratoRetificacaoItem = $("#@Html.IdFor(m => m.ContratoRetificacaoItemId)").val(); 
        $.ajax({
            type: 'POST',
            url: '@Url.Action("RecuperaContratoRetificacaoItem","MedicaoContrato",new { Area = "Contrato" })',
            cache: false,
            async: false,
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify({
                codigo: codigoContratoRetificacaoItem
            }),
            success: function (result) {
                showErrorMessage(getErrorMessageContainer('@Html.NameFor(m => m.ContratoRetificacaoItemId)'), result.errorMessage);
                if (result.contratoRetificacaoItem != null) {
                    $('#@Html.IdFor(m => m.ContratoRetencaoItem.ComplementoDescricao)').val(result.contratoRetificacaoItem.ComplementoDescricao);
                    $('#@Html.IdFor(m => m.ContratoRetencaoItem.DescricaoNaturezaItem)').val(result.contratoRetificacaoItem.DescricaoNaturezaItem);
                    $('#@Html.IdFor(m => m.ContratoRetencaoItem.Servico.UnidadeMedida.Sigla)').val(result.contratoRetificacaoItem.Servico.SiglaUnidadeMedida);
                    if (result.contratoRetificacaoItem.ValorItem != null) {
                        $('#@Html.IdFor(m => m.ValorItem)').val(roundDecimal(result.contratoRetificacaoItem.ValorItem, 2));
                    }
                    else {
                        $('#@Html.IdFor(m => m.ValorItem)').val("");
                    }
                    if (result.contratoRetificacaoItem.RetencaoItem != null) $('#@Html.IdFor(m => m.RetencaoContratual)').val(roundDecimal(result.contratoRetificacaoItem.RetencaoItem, 5));
                    $("#@Html.IdFor(m => m.JsonListaRetificacaoProvisao)").val(result.listaContratoRetificacaoProvisao);
                    jsonRetificaoProvisaoArray = JSON.parse($("#@Html.IdFor(m => m.JsonListaRetificacaoProvisao)").val());
                }
                else
                {
                    $('#@Html.IdFor(m => m.ContratoRetencaoItem.ComplementoDescricao)').val("");
                    $('#@Html.IdFor(m => m.ContratoRetencaoItem.DescricaoNaturezaItem)').val("");
                    $('#@Html.IdFor(m => m.ContratoRetencaoItem.Servico.UnidadeMedida.Sigla)').val("");
                    $('#@Html.IdFor(m => m.ValorItem)').val("");
                    $("#@Html.IdFor(m => m.JsonListaRetificacaoProvisao)").val();
                    jsonRetificaoProvisaoArray = null;

                }
                isRecuperou = result.ehRecuperou;
            },
            error: function (result) {
                showErrorMessage(getErrorMessageContainer('@Html.NameFor(m => m.ContratoRetificacaoItemId)'), result.errorMessage);
                $('#@Html.IdFor(m => m.ContratoRetencaoItem.ComplementoDescricao)').val("");
                $('#@Html.IdFor(m => m.ContratoRetencaoItem.DescricaoNaturezaItem)').val("");
                $('#@Html.IdFor(m => m.ContratoRetencaoItem.Servico.UnidadeMedida.Sigla)').val("");
                $('#@Html.IdFor(m => m.ValorItem)').val("");
                $("#@Html.IdFor(m => m.JsonListaRetificacaoProvisao)").val();
                jsonRetificaoProvisaoArray = null;
            }
        });

        fillTable();

        return isRecuperou;
    }


    function fillTable() {
            $("#tableItens thead").empty();
            var row = $('<tr role="row">');
            $("#tableItens thead").append(row);
            row.append($('<th style="min-width: 65px;">Seq</th>'));
            row.append($('<th>Evento</th>'));
            row.append($('<th class="text-center">Data</th>'));
            if (jsonRetificaoProvisaoArray != null) {
                if (jsonRetificaoProvisaoArray[0].ContratoRetificacaoItem.NaturezaItem != 1) {
                    row.append($('<th class="text-right">Quantidade</th>'));
                    row.append($('<th class="text-right">Quantidade medida</th>'));
                    row.append($('<th class="text-right">Quantidade pendente</th>'));
                }
            }
            else {
                row.append($('<th class="text-right">Quantidade</th>'));
                row.append($('<th class="text-right">Quantidade medida</th>'));
                row.append($('<th class="text-right">Quantidade pendente</th>'));
