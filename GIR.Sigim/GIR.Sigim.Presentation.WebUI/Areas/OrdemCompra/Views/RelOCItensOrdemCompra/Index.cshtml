@model GIR.Sigim.Presentation.WebUI.Areas.OrdemCompra.ViewModel.RelOcItensOrdemCompraListaViewModel
@{
    ViewBag.Title = "Itens de ordem de compra";
}

@Html.Partial("_NotificationMessagesPartial")
<div class="row">
    <article class="col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable centerBox">
        <div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false">
            <header>
                <span class="widget-icon"><i class="fa fa-cog"></i></span>
                <h2>@ViewBag.Title</h2>
            </header>
            <div>
                <div class="widget-body no-padding">
                    @using (Ajax.BeginForm(
                        "Lista",
                        "RelOCItensOrdemCompra",
                        null,
                        new AjaxOptions() { InsertionMode = InsertionMode.Replace, HttpMethod = "POST", OnSuccess = "refresh", UpdateTargetId = "resultadoBusca" },
                        new { @id = "formFilter", @class = "smart-form client-form", @novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Filtro.PaginationParameters.PageIndex)
                        @Html.HiddenFor(m => m.Filtro.PaginationParameters.PageSize)
                        @Html.HiddenFor(m => m.Filtro.PaginationParameters.OrderBy)
                        @Html.HiddenFor(m => m.Filtro.PaginationParameters.Ascending)
                        <div class="panel-group smart-accordion-default" id="accordion">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseFiltro" class="">
                                            <i class="fa fa-lg fa-angle-down pull-right"></i>
                                            <i class="fa fa-lg fa-angle-up pull-right"></i>
                                            Filtro
                                        </a>
                                    </h4>
                                </div>
                                <div id="collapseFiltro" class="panel-collapse collapse in">
                                    <div class="panel-body no-padding">
                                        <fieldset>
                                            <div class="row">
                                                <section class="col col-3">
                                                    @Html.LabelFor(m => m.Filtro.DataInicial, new { @class = "label" })
                                                    <label class="input">
                                                        <i class="icon-append fa fa-calendar"></i>
                                                        @Html.TextBoxFor(m => m.Filtro.DataInicial, "{0:dd/MM/yyyy}")
                                                        <script type="text/javascript">
                                                            $(document).ready(function () {
                                                                $("#@Html.IdFor(m => m.Filtro.DataInicial)").on("change", function () {
                                                                    limpaLista();
                                                                });
                                                            });
                                                        </script>
                                                    </label>
                                                    @Html.ValidationMessageFor(m => m.Filtro.DataInicial, "Informe uma data válida.", new { @class = "note note-error" })
                                                </section>
                                                <section class="col col-3">
                                                    @Html.LabelFor(m => m.Filtro.DataFinal, new { @class = "label" })
                                                    <label class="input">
                                                        <i class="icon-append fa fa-calendar"></i>
                                                        @Html.TextBoxFor(m => m.Filtro.DataFinal, "{0:dd/MM/yyyy}")
                                                        <script type="text/javascript">
                                                            $(document).ready(function () {
                                                                $("#@Html.IdFor(m => m.Filtro.DataFinal)").on("change", function () {
                                                                    limpaLista();
                                                                });
                                                            });
                                                        </script>
                                                    </label>
                                                    @Html.ValidationMessageFor(m => m.Filtro.DataFinal, "Informe uma data válida.", new { @class = "note note-error" })
                                                </section>
                                                <script type="text/javascript">
                                                    $(document).ready(function () {
                                                        $('#@Html.IdFor(m => m.Filtro.DataInicial)').datepicker({
                                                            prevText: '<i class="fa fa-chevron-left"></i>',
                                                            nextText: '<i class="fa fa-chevron-right"></i>',
                                                            changeMonth: true,
                                                            changeYear: true,
                                                            onClose: function (selectedDate) {
                                                                $('#@Html.IdFor(m => m.Filtro.DataFinal)').datepicker('option', 'minDate', selectedDate);
                                                            }
                                                        });

                                                        $('#@Html.IdFor(m => m.Filtro.DataFinal)').datepicker({
                                                            prevText: '<i class="fa fa-chevron-left"></i>',
                                                            nextText: '<i class="fa fa-chevron-right"></i>',
                                                            changeMonth: true,
                                                            changeYear: true,
                                                            onClose: function (selectedDate) {
                                                                $('#@Html.IdFor(m => m.Filtro.DataInicial)').datepicker('option', 'maxDate', selectedDate);
                                                            }
                                                        });
                                                    });
                                                </script>
                                                <section class="col col-2">
                                                    @Html.LabelFor(m => m.Filtro.OrdemCompraId, new { @class = "label" })
                                                    <label class="input">
                                                        @Html.TextBoxFor(m => m.Filtro.OrdemCompraId, new { @maxlength = "10" })
                                                        <script type="text/javascript">
                                                            $(document).ready(function () {
                                                                $("#@Html.IdFor(m => m.Filtro.OrdemCompraId)").on("change", function () {
                                                                    limpaLista();
                                                                });
                                                            });
                                                        </script>
                                                    </label>
                                                    @Html.ValidationMessageFor(m => m.Filtro.OrdemCompraId, "", new { @class = "note note-error" })
                                                </section>
                                                <section class="col col-4">
                                                    @*<label class="label"> </label>*@
                                                    <div class="inline-group" style="padding-top:28px;">
                                                        <label class="checkbox">
                                                            @Html.CheckBoxFor(m => m.Filtro.EhExibirSomentecomSaldo)
                                                            <i></i>@Html.DisplayNameFor(m => m.Filtro.EhExibirSomentecomSaldo)
                                                        </label>
                                                    </div>
                                                </section>
                                            </div>
                                            <div class="row">
                                                <section class="col col-12">
                                                    <div style="border:1px solid lightgray; width:400px;">
                                                        <label class="label">Situação OC</label>
                                                        <div class="inline-group" style="padding-left:25px;">
                                                            <label class="checkbox">
                                                                @Html.CheckBoxFor(m => m.Filtro.EhLiberada)
                                                                <i></i>@Html.DisplayNameFor(m => m.Filtro.EhLiberada)
                                                            </label>
                                                            <label class="checkbox">
                                                                @Html.CheckBoxFor(m => m.Filtro.EhPendente)
                                                                <i></i>@Html.DisplayNameFor(m => m.Filtro.EhPendente)
                                                            </label>
                                                            <label class="checkbox">
                                                                @Html.CheckBoxFor(m => m.Filtro.EhFechada)
                                                                <i></i>@Html.DisplayNameFor(m => m.Filtro.EhFechada)
                                                            </label>
                                                        </div>
                                                    </div>
                                                </section>
                                            </div>
                                            <div class="row">
                                                @Html.EditorFor(m => m.Filtro.CentroCusto, "CentroCusto", new { @sectionClass = "col col-6", @labelText = "Centro de Custo" })
                                                <script type="text/javascript">
                                                    $(document).ready(function () {
                                                        $("#@Html.IdFor(m => m.Filtro.CentroCusto.Codigo)").on("change", function () {
                                                            limpaLista();
                                                        });
                                                    });
                                                </script>
                                            </div>
                                            <div class="row">
                                                @Html.EditorFor(m => m.Filtro.Classe, "Classe", new { @sectionClass = "col col-6", @labelText = "Classe" })
                                                <script type="text/javascript">
                                                    $(document).ready(function () {
                                                        $("#@Html.IdFor(m => m.Filtro.Classe.Codigo)").on("change", function () {
                                                            limpaLista();
                                                        });
                                                    });
                                                </script>
                                            </div>
                                            <div class="row">
                                                <section class="col col-10">
                                                    @Html.LabelFor(m => m.Filtro.ClienteFornecedorId, new { @class = "label" })
                                                    <label class="select">
                                                        @Html.DropDownListFor(m => m.Filtro.ClienteFornecedorId, Model.ListaFornecedorCliente, string.Empty)
                                                        <i></i>
                                                        <script type="text/javascript">
                                                            $(document).ready(function () {
                                                                $("#@Html.IdFor(m => m.Filtro.ClienteFornecedorId)").on("change", function () {
                                                                    limpaLista();
                                                                });
                                                            });
                                                        </script>
                                                    </label>
                                                </section>
                                            </div>
                                            <div class="row">
                                                @Html.EditorFor(m => m.Filtro.Material, "Material", new { @sectionClass = "col col-10", @required = false, @centroCustoRequerido = false, @insumoControlado = false })
                                                <section class="col col-1">
                                                    <button id="btnSearch" type="submit" class="btn btn-primary base-align" title="Buscar" onclick="javascript:tratarBotoes(true);goToPage(0);">
                                                        <i class="fa fa-search fa-lg"></i>
                                                    </button>
                                                </section>
                                            </div>
                                        </fieldset>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <footer>
                            @{
                            var url = Url.Action("Imprimir", "RelNotaFiscalLiberada");
                            }
                            @Html.EditorFor(m => m.PodeImprimir, "Imprimir", new { @url = url })                           
                        </footer>
                    }
                    <div id="resultadoBusca"></div>
                </div>
            </div>
        </div>
    </article>
</div>
@section scripts{
    @{
        bool condicao = ((Model.Filtro.CentroCusto !=null) && !string.IsNullOrEmpty(Model.Filtro.CentroCusto.Codigo));
            condicao = condicao || ((Model.Filtro.Classe !=null) && !string.IsNullOrEmpty(Model.Filtro.Classe.Codigo));
            condicao = condicao || (Model.Filtro.DataInicial != null);
            condicao = condicao || (Model.Filtro.DataFinal != null);
            condicao = condicao || (Model.Filtro.EhExibirSomentecomSaldo == true);
            condicao = condicao || (Model.Filtro.EhFechada == true);
            condicao = condicao || (Model.Filtro.EhLiberada == true);
            condicao = condicao || (Model.Filtro.EhPendente == true);
            condicao = condicao || (Model.Filtro.MaterialId != null);
            condicao = condicao || (Model.Filtro.OrdemCompraId != null);
    }
    @if (!condicao)
    {
        @Html.EditorFor(m => m.Filtro.PaginationParameters, "ListPageScriptExtra")
    }
    else{
        @Html.EditorFor(m => m.Filtro.PaginationParameters, "ListPageScript")
    }
}

<script type="text/javascript">
    $(document).ready(function () {

        $(document).on("showFormatoImpressaoModalPanel", function (e) {

            var dataInicial          = $("#@Html.IdFor(m => m.Filtro.DataInicial)").val();
            var dataFinal            = $("#@Html.IdFor(m => m.Filtro.DataFinal)").val();

            if ((dataInicial == "") || (dataFinal == "")) {
                smartAlert("Atenção", "Informe o período !", "warning");
                e.event.preventDefault();
            }

            if ((dataInicial != "") && (dataFinal != "")) {
                if (compararDatas(dataInicial,dataFinal) > 0){
                    smartAlert("Atenção", "Data inicial maior que data final !", "warning");
                    e.event.preventDefault();
                }
            }
        })
    });

    function refresh(result) {
        onSuccess();
        // se a lista da pesquisa nao retornou , se não retornou desabilita o botão imprimir
        if (result.search('tableSearchResult') == -1) {
            tratarBotoes(false);
        }
    }

    function limpaLista() {
        tratarBotoes(false);
        $("#resultadoBusca").empty();
    }

    function tratarBotoes(condicaoImprimir) {
        $("#@Html.IdFor(m => m.PodeImprimir)").val(condicaoImprimir);

        if (condicaoImprimir) {
            document.getElementById('btnImprimir').className = "btn btn-primary";
        }
        else {
            document.getElementById('btnImprimir').className = "btn btn-primary disabled";
        }
    }

</script>