            if (jsonItemArray[i].DataMaxima != null)
                row.append($('<td>' + new Date(jsonItemArray[i].DataMaxima).toFormatDDMMYYYY() + '</td>'));
            else
                row.append($('<td>&nbsp;</td>'));
            
            row.append($('<td class="text-center">' + jsonItemArray[i].SituacaoDescricao + '</td>'));
