@using GIR.Sigim.Application.Constantes
<ul style="">
    <li>
        <a href="@Url.Content("~/OrdemCompra/Home")" title="Painel"><i class="fa fa-lg fa-fw fa-home"></i><span class="menu-item-parent">Home</span></a>
    </li>
    @if (User.IsInRole(Funcionalidade.ParametroOrdemCompraAcessar)
        || User.IsInRole(Funcionalidade.ParametroUsuarioOrdemCompraAcessar))
    {
        <li>
            <a href="#"><i class="fa fa-lg fa-fw fa-cog"></i><span class="menu-item-parent">Sistema</span></a>
            <ul>
                @if (User.IsInRole(Funcionalidade.ParametroOrdemCompraAcessar))
                {
                    <li>@Html.ActionLink("Parâmetros", "Index", "Parametros")</li>
                }
                @if (User.IsInRole(Funcionalidade.ParametroUsuarioOrdemCompraAcessar))
                {
                    <li>@Html.ActionLink("Parâmetros - usuário", "Index", "ParametrosUsuario")</li>
                }
            </ul>
        </li>
    }

    @if (User.IsInRole(Funcionalidade.OrdemCompraUnidadeMedidaAcessar)
        || User.IsInRole(Funcionalidade.OrdemCompraMaterialAcessar))
    {
        <li>
            <a href="#"><i class="fa fa-lg fa-fw fa-cog"></i><span class="menu-item-parent">Cadastros</span></a>
            <ul>
                @if (User.IsInRole(Funcionalidade.OrdemCompraUnidadeMedidaAcessar))
                {
                    <li>@Html.ActionLink("Unidade de medida", "", "UnidadeMedida" )</li>
                }
                @if (User.IsInRole(Funcionalidade.OrdemCompraMaterialAcessar))
                {
                    <li>@Html.ActionLink("Material", "Index", "Material")</li>
                }
            </ul>
        </li>
    }

    @if (User.IsInRole(Funcionalidade.PreRequisicaoMaterialAcessar)
        || User.IsInRole(Funcionalidade.RequisicaoMaterialAcessar))
    {
        <li>
            <a href="#"><i class="fa fa-lg fa-fw fa-cog"></i><span class="menu-item-parent">Requisição de material</span></a>
            <ul>
                @if (User.IsInRole(Funcionalidade.PreRequisicaoMaterialAcessar))
                {
                    <li>
                        <a href="#">Pré-requisição de material</a>
                        <ul>
                            <li>@Html.ActionLink("Cadastro", "Index", "PreRequisicaoMaterial")</li>
                        </ul>
                    </li>
                }
                @if (User.IsInRole(Funcionalidade.RequisicaoMaterialAcessar))
                {
                    <li>@Html.ActionLink("Cadastro", "Index", "RequisicaoMaterial")</li>
                }
            </ul>
        </li>
    }

    @if (User.IsInRole(Funcionalidade.EntradaMaterialAcessar))
    {
        <li>
            <a href="#"><i class="fa fa-lg fa-fw fa-cog"></i><span class="menu-item-parent">Entrada de material</span></a>
            <ul>
                <li>@Html.ActionLink("Cadastro", "Index", "EntradaMaterial")</li>
            </ul>
        </li>
    }

    @if (User.IsInRole(Funcionalidade.RelatorioItensOrdemCompraAcessar))
    {
        <li>
            <a href="#"><i class="fa fa-lg fa-fw fa-cog"></i><span class="menu-item-parent">Relatórios</span></a>
            <ul>
                <li>
                    <a href="#">Ordem compra</a>
                    <ul>
                        <li>@Html.ActionLink("Itens de ordem de compra", "Index", "RelOCItensOrdemCompra")</li>
                    </ul>
                </li>
            </ul>
        </li>
    }
</ul>