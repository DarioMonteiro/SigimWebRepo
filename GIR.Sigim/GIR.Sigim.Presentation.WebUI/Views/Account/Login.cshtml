@model GIR.Sigim.Presentation.WebUI.ViewModel.Admin.LoginViewModel

@{
    ViewBag.Title = "Login";
}

@section style {
    <style type="text/css">
        fieldset legend
        {
            display: none;
        }
    </style>
}

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4 centerBox">
        <div class="well no-padding">
            @using (Html.BeginForm(
                "Login",
                "Account",
                new { ReturnUrl = ViewBag.ReturnUrl },
                FormMethod.Post,
                new { @id = "loginForm", @class = "smart-form client-form", @novalidate = "novalidate" }))
            {
                @Html.AntiForgeryToken()
                <header>Login</header>
                <fieldset>
                    <legend></legend>
                    <section>
                        @Html.LabelFor(m => m.UserName, new { @class = "label" })
                        <label class="input">
                            <i class="icon-append fa fa-user"></i>
                            @Html.TextBoxFor(m => m.UserName)
                        </label>
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "note note-error" })
                    </section>
                    <section>
                        @Html.LabelFor(m => m.Password, new { @class = "label" })
                        <label class="input">
                            <i class="icon-append fa fa-lock"></i>
                            @Html.PasswordFor(m => m.Password, new { @class = "lastField" })
                        </label>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "note note-error" })
                    </section>

                    <section>
                        <label class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            <i></i>@Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </section>
                </fieldset>
                <footer>
                    <button type="submit" class="btn btn-primary">
                        Entrar
                    </button>
                </footer>
            }
        </div>
    </div>
</div>