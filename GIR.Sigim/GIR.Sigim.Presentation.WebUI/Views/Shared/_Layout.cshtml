<!DOCTYPE html>
<html lang="pt-BR">
<head>
    @Html.Partial("_HeadPartial")
    @RenderSection("style", required: false)
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    @Html.Partial("_LoadingPartial")
    <header id="header">
        <div id="logo-group">
            <span id="logo">
                <a href="/">
                    <img src="~/Content/img/logo.png" alt="SIGIM">
                </a>
            </span>
        </div>
        <div class="pull-right">
            <div id="hide-menu" class="btn-header pull-right">
                <span><a href="javascript:void(0);" data-action="toggleMenu" title="Collapse Menu"><i class="fa fa-reorder"></i></a></span>
            </div>
        </div>
        <div class="pull-right">
            @Html.Partial("_LoginPartial")
        </div>
    </header>
    <aside id="left-panel">
        <div class="login-info">
            <span>
                @*<a href="@Url.Action("ChangePassword", "Account", new { area = "" })" title="@User.Identity.Name">*@
                <a href="#" title="@User.Identity.Name">
                    @*<img src="~/Content/img/avatars/male.png" alt="@User.Identity.Name" class="online">*@
                    <span style="font-size:small">@User.Identity.Name</span>
                </a>
            </span>
        </div>
        <nav>
            @Html.Partial("_MenuPartial")
        </nav>
        <span class="minifyme" data-action="minifyMenu">
            <i class="fa fa-arrow-circle-left hit"></i>
        </span>
    </aside>
    <div id="main" role="main">
        <div id="ribbon">
            @Html.MvcSiteMap().SiteMapPath()
        </div>
        <div id="content">
            <section id="widget-grid" class="">
                <div id="notificationMessages"></div>
                @RenderBody()
            </section>
        </div>
    </div>
    @Scripts.Render("~/bundles/scripts")

    @if (ViewBag.IsUploadForm != null && ViewBag.IsUploadForm == true)
    {
        @Scripts.Render("~/bundles/jquery-form");
    }
    else
    {
        @Scripts.Render("~/bundles/unobtrusive-ajax");
    }

    @RenderSection("scripts", required: false)
</body>
</html>