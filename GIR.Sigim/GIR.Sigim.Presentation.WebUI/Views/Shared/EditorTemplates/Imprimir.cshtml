@model bool
@{
    string disableBtnImprimir = string.Empty;
    //bool? podeImprimir = ViewBag.podeImprimir as bool? ?? false;
    if (!Model)
    {
        disableBtnImprimir = "disabled";
    }
}
<a data-toggle="modal" href="#FormatoImpressao_ModalPanel" class="btn btn-primary @disableBtnImprimir">Imprimir</a>
@if (Model) {
    <div class="modal fade" id="FormatoImpressao_ModalPanel" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">
                        Formato do Arquivo para Impressão
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col col-12">
                            @foreach (var item in ViewBag.ListaFormatoExportacaoArquivo)
	                        {
                                var itemChecked = string.Empty;
                                if (item.Selected)
                                {
                                    itemChecked = "checked=\"checked\"";
                                }
                                <label class="radio">
							        <input type="radio" name="formatoExportacaoArquivo" value="@item.Value" @itemChecked>
							        <i></i>@item.Text
                                </label>
	                        }
					    </div>
                    </div>
                </div>
                <div class="modal-footer">
					<button type="button" id="btnImprimirPreRequisicao" class="btn btn-primary" data-dismiss="modal">
						Ok
					</button>
				</div>
            </div>
        </div>
        <script type="text/javascript">
            $(document).ready(function () {
                var downloaderFrame = $('<iframe style="display: none;"></iframe>');

                $('#FormatoImpressao_ModalPanel').after(downloaderFrame);

                $("#btnImprimirPreRequisicao").on("click", function () {
                    downloaderFrame.attr('src', '@ViewBag.url?formato=' + $("input:radio[name=formatoExportacaoArquivo]:checked").val());
                });
            });
        </script>
    </div>
}